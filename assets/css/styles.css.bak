body {
    background-color: green;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: green; /* Background color for the header */
            color: white; /* Text color */
            padding: 10px 20px; /* Adjust padding as needed */
        }

        /* Centered text style */
        .header-title {
            text-align: left;
			font-size: 56px
        }

        /* Right-aligned links style */
        .header-links {
            text-align: right;
        }

        /* Style for the links (customize as needed) */
        .header-links a {
            color: none;
            text-decoration: none;
            margin-left: 20px; /* Adjust spacing between links */
        }

        /* Style for the main header title (customize as needed) */
        .header-center{
			text-align: center;
			text-decoration: none;
			flex-grow: 1; /* Expands to fill available space */
            font-size: 20px;
			
        }

.sections-container {
	display: flex;
}

/* Style for the left section */
.left-section {
	flex-grow: 1; /* Stretch to fill the remaining space */
	padding: 20px;
	border: 1px solid #ccc;
	margin: 10px;
	background-color: white;
	
}

/* Style for the right section (image) */
.right-section {
	background-color: white;
	padding: 20px;
	border: 1px solid #ccc;
	margin: 10px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

/* Style for the image */
.right-section img {
	max-width: auto; /* Make sure the image doesn't exceed its container */
	max-height: auto; /* Make sure the image doesn't exceed its container */
}

.enlarge-onhover {
    width: auto;
    height: 60px;
	margin-right: 10px;
}

.enlarge-onhover:hover {
    width: auto;
    height: 70px;
	margin-right: 10px;
}

nav ul {
    background-color: green;
    list-style-type: none;
    padding: 0;
    text-align: center;
	padding: 1rem;
	font-size:200%
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li a {
    color: white;
    text-decoration: none;
}

section {
    padding: 20px;
    margin: 20px;
    background-color: white;
}
ul {
    list-style: none;
}

a {
    color: white;
    text-decoration: none;
}

/* Add a black background color to the top navigation */
.topnav {
  background-color: #333;
  overflow: hidden;
}

/* Style the links inside the navigation bar */
.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

/* Change the color of links on hover */
.topnav a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.topnav a.active {
  background-color: #04AA6D;
  color: white;
}